<link rel="stylesheet" href="/styles/normform.min.css"/>

<h1>Register your organisation</h1>

<form class="normform">
  <label for="name">Organisation Name</label>
  <input type="text" id="name" name="name" required>

  <label for="registered-office">Registered Office Address</label>
  <textarea rows="5" id="registered-office" name="registered-office" required></textarea>

  <fieldset>
    <legend>Primary Point of Contact</legend>
    <label for="ppoc-name">Full Name</label>
    <input type="text" id="ppoc-name" name="ppoc-name" required>

    <label for="ppoc-role">Role</label>
    <input type="text" id="ppoc-role" name="ppoc-role" required>

    <label for="ppoc-email">Email</label>
    <input type="email" id="ppoc-email" name="ppoc-email" required>

    <label for="ppoc-phone">Phone Number</label>
    <input type="text" pattern="^(\+|00)[1-9][0-9 \-\(\)\.]{7,32}$" id="ppoc-phone" name="ppoc-phone" required>
  </fieldset>

  <fieldset>
    <legend>Secondary Point of Contact</legend>
    <label for="spoc-name">Full Name</label>
    <input type="text" id="spoc-name" name="spoc-name">

    <label for="spoc-role">Role</label>
    <input type="text" id="spoc-role" name="spoc-role">

    <label for="spoc-email">Email</label>
    <input type="email" id="spoc-email" name="spoc-email">

    <label for="spoc-phone">Phone Number</label>
    <input type="text" pattern="^(\+|00)[1-9][0-9 \-\(\)\.]{7,32}$" id="spoc-phone" name="spoc-phone">
  </fieldset>

  <label for="registration-number">Registration Number</label>
  <input type="text" id="registration-number" name="registration-number">

  <label for="mission">Community Group Mission</label>
  <textarea rows="5" id="mission" name="mission" required></textarea>

  <label for="target-audience">Who is your Target Audience?</label>
  <textarea rows="2" id="target-audience" name="target-audience"></textarea>

  <label>Do you have a a Constitution</label>

  <input type="radio" id="constitution-yes" name="constitution" value="true">
  <label for="constitution-yes">Yes</label>

  <input type="radio" id="constitution-no" name="constitution" value="false" checked>
  <label for="constitution-no">No</label>

  <label>Do you have a a Bank Account</label>

  <input type="radio" id="bank-yes" name="bank" value="true">
  <label for="bank-yes">Yes</label>

  <input type="radio" id="bank-no" name="bank" value="false" checked>
  <label for="bank-no">No</label>

  <label for="prev-projects">What projects have you previously delivered?</label>
  <textarea rows="5" id="prev-projects" name="prev-projects"></textarea>

  <label for="prev-grants">What grants have you previously recieved?
  <textarea rows="5" id="prev-grants" name="prev-grants"></textarea>

  <label for="partnerships">What existing partnerships or collaborations do you have?</label>
  <textarea rows="5" id="partnerships" name="partnerships"></textarea>

  <label>Do you have a Climate Action Plan?</label>

  <input type="radio" id="cap-yes" name="cap" value="true">
  <label for="cap-yes">Yes</label>

  <input type="radio" id="cap-no" name="cap" value="false" checked>
  <label for="cap-no">No</label>

  <input type="submit" formmethod="post" value="Submit">
</form>
