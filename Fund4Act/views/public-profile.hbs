    {{/each}}
{{/if}}
<h2>Our Mission:</h2>
<p>{{profile.mission}}</p>
<h2>Our Previous Actions:</h2>
<p>{{profile.previous_actions}}</p>
<h2>Our Previous Funding:</h2>
<p>{{profile.previous_grants}}</p>
<h2>Our Partnerships:</h2>
<p>{{profile.partnerships}}</p>
