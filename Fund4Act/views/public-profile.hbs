{{> header}}

<img src="{{profile.logo_url}}">
<h1>{{profile.name}}</h1>
<h2>Contact Us:</h2>
<p>{{profile.email}}</p>
<p>{{profile.website_url}}</p>
{{#if actions}}
    <h2>Our Actions:</h2>
    {{#each actions}}
        <p><a href="/action/{{this.slug}}">{{this.name}}</a></p>
        <br>
    {{/each}}
{{/if}}
{{#if pledges}}
    <h2>Our Pledges:</h2>
    {{#each pledges}}
        <p><a href="/action/{{this.proj_slug}}">{{this.action_name}}</a></p>
        <p>â‚¬{{this.amount}}</p>
        <p>{{this.date}}</p>
