{{> header}}

<link rel="stylesheet" href="/styles/normform.min.css"/>

<style>
  main{padding: 0 1rem;}
  textarea{resize: none;}
  @media only screen and (min-width: 1000px) {
    main{padding: 0;}
  }
</style>
<main>
  <h1>Pledge Donation</h1>
  <p>From {{profile.display_name}}</p>
  <p>To {{action.name}}</p>
  <form id="pledge-form" class="normform" method="post">

    {{#unless profile.display_name}}
      <label for="name">Enter your display name</label>
      <input type="text" id="name" name="name" required>
    {{/unless}}

    <label for="pledge-amount">Pledge Amount* (â‚¬)</label>
    <input type="number" id="pledge-amount" name="amount" min="1" step="1" required>

    <label for="pledge-comment">Comment (optional)</label>
    <textarea type="text" id="pledge-comment" name="comment"></textarea>

    <input type="submit" value="Pledge">
  </form>
</main>
