{{> header}}

<main>
  <link rel="stylesheet" href="/styles/normform.min.css"/>

  <h1>Register as a Project Creator</h1>

  <form class="normform" method="post">
    <label for="name">Organisation Name</label>
    <input type="text" id="name" name="name" required>

    <label for="email">Contact Email (publically viewable)</label>
    <input type="email" id="email" name="email">

    <label for="logo-url">Logo URL</label>
    <input type="url" id="logo-url" name="logo-url" placeholder="https://example.com">

    <label for="website-url">Website URL</label>
    <input type="url" id="website-url" name="wesite-url" placeholder="https://example.com">

    <label for="mission">Organisation Mission (<a href='/resources/mission-statement'>Writing a good mission statement</a>)</label>
    <textarea rows="5" id="mission" name="mission" required></textarea>

    <label for="prev-actions">What actions have you previously delivered?</label>
    <textarea rows="5" id="prev-actions" name="prev-actions"></textarea>

    <label for="prev-grants">What grants have you previously recieved?
    <textarea rows="5" id="prev-grants" name="prev-grants"></textarea>

    <label for="partnerships">What existing partnerships or collaborations do you have?</label>
    <textarea rows="5" id="partnerships" name="partnerships"></textarea>

    <label for="constitution-url">constitution URL</label>
    <input type="url" id="constitution-url" name="constitution-url" placeholder="https://example.com" required>

    <label for="cap-url">Climate Action Plan URL</label>
    <input type="url" id="cap-url" name="cap-url" placeholder="https://example.com" required>

    <input type="submit" value="Submit">
  </form>
</main>
