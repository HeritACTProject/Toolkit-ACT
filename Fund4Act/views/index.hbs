<style>
  body { padding: 0; }
  header { display: flex; justify-content:space-between; align-items:center; height: 4rem; padding: 0 1rem; }
  header h1 { border-bottom: none; }
  header img { width: 2rem; margin: 0; }
  .right { display: flex; }
  #start-action{ margin: 1rem; }
  #profile-image { align-self: center; }
  h2, p { margin: 1rem; }
  hr { margin: 0; }
  #map { height: 70vh; margin: 0; }
</style>

<header>
  <h1>Fund4Act</h1>

  <div class="right">
  {{#unless user}}<a href="/login">login</a>{{/unless}}
  {{#if user}}
    <a id="start-action" href="/profile">Start an action</a>
    <a id="profile-image" href="/profile"><img src="/images/user.svg" arialabel="user profile"></a>
  {{/if}}
  </div>
</header>
<hr>

<main class="wide">
  <section aria-label="actions map view">
    <h2>Donate to local heritage actions</h2>
    <p>Showcase your businesses commitment to your local community</p>
    <div id="map"></div>
    <script type='text/javascript'>
      // center of the map
      var start = [51.165691, 10.451526];

      // Create the map
      var map = L.map('map').setView(start, 3.1);

      // Set up the OSM layer
      L.tileLayer(
        'http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          maxZoom: 18
        }).addTo(map);

      {{#each actions}}
        {{#if this.latitude}}{{#if this.longitude}}
        L.marker([{{this.latitude}}, {{this.longitude}}]).addTo(map).bindPopup("<a href=\"/action/{{this.slug}}\">View action</a>");;
        {{/if}}{{/if}}
      {{/each}}
    </script>
  </section>

  <section aria-label="actions closest to deadline">
    {{#each data.mostUrgent}}
      <h3>{{name}}</h3>
      <a href="/action/{{slug}}">view</a>
      {{#unless @last}}
        <hr>
      {{/unless}}
    {{/each}}
  </section>

  <section>
    <a href="/actions">view all actions</a>
  </section>
</main>
