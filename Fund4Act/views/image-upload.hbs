{{>header}}

<a href="/action/{{action.slug}}/edit/impact">skip</a>
<form method="POST">
  <input type='file' id="image-select" accept="image/png, image/jpeg, image/webp">
  <input type="hidden" id='encoded-image' name='image'>
  <input type='submit' value="save">
</form>

<label for="preview">preview</p>
<img id="preview" src="/images/upload/{{user.id}}/{{action.slug}}.webp" alt="preview">

<noscript>
  <p>Javascript is required to upload images</p>
</noscript>

<script>
  const input = document.getElementById("image-select");
  const preview = document.getElementById("preview");
  const encodedImage = document.getElementById("encoded-image");

  const convertBase64 = (file) => {
      return new Promise((resolve, reject) => {
          const fileReader = new FileReader();
          fileReader.readAsDataURL(file);

          fileReader.onload = () => {
              resolve(fileReader.result);
          };

          fileReader.onerror = (error) => {
              reject(error);
          };
      });
  };

  const uploadImage = async (event) => {
    const file = event.target.files[0];
    if (checkImageSize(file)) {
      const base64 = await convertBase64(file);
      preview.src = base64;
      encodedImage.value = base64;
    }
  };

  const checkImageSize = async (file) => {
    if(file.size > 1048576){
      alert("Uploads must be less than 1MB!");
      return false;
    }
    return true;
  }

  input.addEventListener("change", (e) => {
      uploadImage(e);
  });
</script>
